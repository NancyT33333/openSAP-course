<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core">
	<ResponsivePopover title="{i18n>descriptionTitle}"
		class="sapUiPopupWithPadding">
		<content>
			<l:Grid defaultSpan="XL12 L12 M12 S12">
				<l:content>
					<Text text="{Description}" />
				
				</l:content>
			</l:Grid>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
